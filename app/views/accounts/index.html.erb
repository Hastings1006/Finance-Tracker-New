<div class="card">
  <h2>Accounts</h2>
  <p>Total Balance: <%= @total_balance %><p>
    <div class="account-section">
      <% @accounts.each do |account| %>
        <div class="account-card">
          <h3> <%= link_to account.name, account_path(account) %></h3>
          <p>Balance: <%= account.balance%></p>
        </div>
      <%end%>
    </div>

  <%= link_to "+ Add Account", new_account_path, remote: true %>

</div>
